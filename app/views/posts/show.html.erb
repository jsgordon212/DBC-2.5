
<div id="posts_show_content" class="skinny_wrapper wrapper_padding">
  <header>
  <% if @post %>
     <p class="posted_by">posted by <a class="posted_by" href="/users/<%= @post.user.id %>"><%= @post.user.username %></a></p>
     <h1><%= @post.title %></h1>
     <hr>
    </header>
    <div id="content">
      <p><%= @post.content %></p>
    </div>
    <% if current_user==@post.user %>
        <nav id='post_options'>
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Delete ', @post,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
        </nav>
    <% end %>
    <hr>
    <%= render 'disqus' %>
  <% end %>
</div>