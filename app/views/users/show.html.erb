<h1 id="profile-header"><%= @user.username %>'s Blog</h1>

<% if @user == current_user %>
  <span id="new_post"><%= link_to 'New Post', new_post_path %></span>
<% end %>

<% @user.posts.each do |post| %>
  <div id="posts_show_content" class="skinny_wrapper wrapper_padding">
    <header>
       <p class="posted_by">posted by <%= post.user.username %></p>
       <h1><%= post.title %></h1>
       <hr>
      </header>
      <div id="content">
        <p><%= post.content %></p>
      </div>
      <% if current_user==post.user %>
          <nav id='post_options'>
            <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Delete ', @post,
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
          </nav>
      <% end %>
    <hr>
    <%= render 'disqus' %>
  </div>
<% end %>

